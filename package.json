{
  "name": "meeting-planner",
  "version": "0.0.1",
  "description": "meeting planner application aiming to simplify and enrich user experience of creating meetings with family and friends like birthdays, bachelor parties, kayaking trips, skiing and others",
  "author": "Mateusz Angulski <mateusz@angulski.pl> (https://angulski.pl/)",
  "license": "UNLICENSED",
  "private": true,
  "keywords": [
    "meeting",
    "planner",
    "let's meet",
    "meet",
    "DDD",
    "CRUD"
  ],
  "scripts": {
    "prebuild": "npx rimraf dist",
    "build": "nest build",
    "format": "npx prettier --write \"src/**/*.ts\" \"e2e/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "npx tslint -p tsconfig.json -c tslint.json",
    "test": "npx tsc --noEmit && npx jest --passWithNoTests",
    "test:watch": "npx tsc --noEmit && npx jest --passWithNoTests --watch",
    "test:cov": "npx tsc --noEmit && npx jest --passWithNoTests --coverage",
    "test:debug": "npx tsc --noEmit && node --inspect-brk -r tsconfig-paths/register -r ts-node/register npx jest --passWithNoTests --runInBand",
    "test:e2e": "npx tsc --noEmit && npx jest --passWithNoTests --config ./e2e/jest.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjsx/crud": "^4.2.0",
    "@nestjsx/crud-typeorm": "^4.2.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "mysql": "^2.17.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "typeorm": "^0.2.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.12.2",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb-base": "^0.3.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  }
}
